<h3>Name: <%= @employee.name %> </h3>
<h3>Department: <%= @employee.department.name %> </h3>
<h3>Level: <%= @employee.level %> </h3>
<div id="oldest_ticket">
    <h3>Oldest Ticket: </h3>
    <p>Subject: <%= @employee.oldest_ticket.subject %></p>
    <p>Age: <%= @employee.oldest_ticket.age %></p>
</div>
<div id="tickets">
    <h3>Tickets: <% @employee.employee_tickets.each do |ticket| %> </h3>
        <div class="ticket">
        <p>Subject: <%= ticket.subject %></p>
        <p>Age: <%= ticket.age %></p>
        </div>
    <% end %>
</div>
<h4>Add a ticket: </h4>
<%= form_with url:"/employees/#{@employee.id}", method: :post, local: true do |form|%>
    <%= form.label :ticket_id %>
    <%= form.number_field :ticket_id %>
    <%= form.submit "Add Ticket"%>
<% end %>
<div id="best_friends">
    <h4>Best Friends:</h4>
    <h3><% @best_friends.each do |friend| %> </h3>
        <p>Name: <%= friend.name %></p>
    <% end %>
</div>